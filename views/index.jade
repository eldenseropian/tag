extends layout

mixin small-picture
  - var picSize = 225
  // img(src="public/images/instacat.jpeg" alt=":(" width="#{picSize}" height="#{picSize}")

mixin status
  table#status
    tbody
      tr
        td
          div 
            h2 START
          div#start Cat
        td
          div 
            h2 PREVIOUS
          div#previous -
        td
          div 
            h2 CURRENT
          div#current Cat
        td
          div 
            h2 END
          div#end Smith

mixin us
  div By Lily, Indy, Julia, and Danae at Hack@Brown

mixin picture-choices()
  table#picture-choices
    tbody
      tr
        td#pic1.pic
          +small-picture()
        td#pic2.pic
          +small-picture()
      tr
        td#pic3.pic
          +small-picture()
        td#pic4.pic
          +small-picture()

mixin tags
  td(valign="top")
    div.tag-title Tags:
    div.tags
      ul#tags-list

mixin choose-picture
  table
    tbody
      tr
        td
          +picture-choices()
          +tags()
  +status()
  +us()
  
mixin choose-tag
  table
    tbody
      tr
        td
          - var picSize = 430
          img(src="public/images/instacat.jpeg" alt=":(" width="#{picSize}" height="#{picSize}")#chosen-pic
        td
          +tags()
  +status()
  +us()
  
block content
  h1 
    span #tag
    span#help ?
  div#choose-picture.show
    +choose-picture()
  div#choose-tag.noshow
    +choose-tag()
  div#end.noshow

   script(type='text/javascript').
    search('cats');
